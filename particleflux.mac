#this is to generate an uniform flux of muons coming from above the detector

/control/verbose 1
/tracking/verbose 1



/gps/particle mu-
/gps/energy 30.0 GeV
/gps/pos/type Plane
/gps/pos/shape Rectangle
/gps/pos/halfx 1 cm
/gps/pos/halfy 1 cm
/gps/pos/centre 0 5 0 cm 
/gps/direction 0 -1 0 
/gps/ang/type beam1d

/run/beamOn 2
