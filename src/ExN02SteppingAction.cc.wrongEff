  G4double anumber;

  G4Track* track = aStep->GetTrack();
  G4VPhysicalVolume* volume= track->GetVolume();
  G4String volu=volume->GetName();
  G4ParticleDefinition* particle=track->GetDefinition();
  G4int pid = track->GetParentID();
  G4int trid= track->GetTrackID();
  G4StepPoint* preStepPoint = aStep->GetPreStepPoint();

  G4TouchableHistory* theTouchable = (G4TouchableHistory*)(preStepPoint->GetTouchable()); 
  G4int xyCopyNo = theTouchable->GetReplicaNumber(); 
  G4int yxCopyNo = theTouchable->GetReplicaNumber(1);
  G4int LevelNo = theTouchable->GetReplicaNumber(2); /*from top to bottom 0-9*/

  //G4int level = 10-LevelNo;
  G4int serial = xyCopyNo+10*yxCopyNo+100*LevelNo;
  G4int oldserial = event_action->lasthit;

  G4ThreeVector pos1 = preStepPoint->GetPosition();

  if(pid==0 && volu == "pixel" && serial != oldserial){ // the detector has been hit by the muon

    //event_action->fired=1;

    G4cout << " vol: " << volu << " ReplicaNum: " << xyCopyNo << "," << yxCopyNo << " Level: "<< LevelNo << G4endl;
    //G4cout << "preStepPoint coordinates: " << pos1 << G4endl;

    if (LevelNo == 1){
      event_action->fired=1;

      anumber = G4UniformRand();
      if(anumber < effi1[xyCopyNo][yxCopyNo]){
	event_action->trigA=1;
      }
    }

    if (LevelNo == 2){
      event_action->fired=1;

      anumber = G4UniformRand();
      if(anumber < effi2[xyCopyNo][yxCopyNo]){
	event_action->trigB=1;
      }
    }

    if (LevelNo == 3){
      event_action->fired=1;

      anumber = G4UniformRand();
      if(anumber < effi3[xyCopyNo][yxCopyNo]){
	event_action->trigC=1;
      }
    }

    // if(trigA==1 && trigB==1 && trigC==1) event_action->trigger=1;
    event_action->lasthit = serial;
  }

}

