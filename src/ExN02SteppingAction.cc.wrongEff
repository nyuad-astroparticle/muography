  G4double effi2[10][10] = {{0.623,0.675,0.675,0.638,0.728,0.728,0.728,0.728,0.728,0.630},
			    {0.548,0.594,0.594,0.561,0.640,0.640,0.640,0.640,0.640,0.554},
